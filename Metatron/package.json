{
  "name": "metatron",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "react-scripts build",
    "package-win": "electron-builder --win",
    "package-linux": "electron-builder --linux"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "electron": "^12.0.0",
    "electron-builder": "^22.10.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.3"
  },
  "devDependencies": {
    "concurrently": "^5.3.0"
  },
  "build": {
    "appId": "com.metatron.app",
    "productName": "Metatron",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.js",
      "preload.js"
    ],
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
